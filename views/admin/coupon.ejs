<%- include('header') %>

<!-- category Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
      <div class="col-sm-3 col-xl-2">
        <a href="/add_coupon_page"><button class="btn-primary">Add Coupon</button></a>
      </div>
  
      <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
          <h6 class="mb-4">Coupons</h6>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No:</th>
                  <th scope="col">Coupon Code</th>
                  <th scope="col">Categories</th>
                  <th scope="col">expiry Date</th>
                  <th scope="col">Offer</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
  
              <tbody>
                <% coupon_data.forEach(function(coupon,index) { %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= coupon.coupon %></td>
                  <td><%= coupon.category %></td>
                  <td><%= coupon.expiryDate %></td>
                  <td><%= coupon.offer %></td>
                  <td>
                    <a
                      href="/edit_coupon/<%= coupon._id %>"
                      class="btn border-shadow update"
                    >
                      <span class="text-gradient"
                        ><i class="fas fa-pencil-alt"></i
                      ></span>
                    </a>
                    <a
                      href="/delete_coupon/<%= coupon._id%>"
                      class="btn border-shadow delete"
                    >
                      <span class="text-gradient"
                        ><i class="fas fa-times"></i
                      ></span>
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- category End -->


  <%- include('footer') %>
