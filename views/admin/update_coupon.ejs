<%- include('header') %>
  
   <!-- Form Start -->
   <div class="container-fluid pt-4 px-4">
    <div class="row g-4 align-items-center justify-content-center mt-5">
      <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
          <h6 class="mb-4">Add Coupon</h6>
          <div>
            <% if(locals.msg) { %>
              <div id="msg" class="alert alert-success"><%- locals.msg -%></div>
              <%}%>
          </div>
          <form
            action="/update_coupon/<%= coupon._id %>"
            id="update_coupon"
            name="basic"
            method="post"
          >
            <div class="mb-3">
              <label for="category" class="form-label">Coupon Code</label>
              <input
                type="text"
                class="form-control"
                id="category"
                name="coupon"
                value="<%= coupon.coupon %>"
               
              />
            </div>
            <div class="form-group dropdown mt-4">
                <button type="button" class="btn btn-light" data-toggle="dropdown">
                  Categories
                  <select name="category">
                    <% category.forEach(function(category) { %>
                      <option value="<%= category.category %>" <% if (category.category === coupon.category) { %>
                        selected
                      <% } %>>
                        <%= category.category %>
                      </option>
                    <% }); %>
                  </select>
                </button>
              </div>
            <div class="mb-3">
              <label for="category" class="form-label">ExpiryDate</label>
              <input
                type="date"
                class="form-control"
                id="category"
                name="expiryDate"
                value="<%= coupon.expiryDate %>"
               
              />
            <div class="mb-3">
              <label for="category" class="form-label">Offer</label>
              <input
                type="number"
                class="form-control"
                id="coupon"
                name="offer"
                value="<%= coupon.offer %>"
               
              />
            </div>
            <button type="submit" class="btn btn-primary">Add Category</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Form End -->
  
  <script>
    setTimeout(() => {

        document.getElementById('msg').style.display="none"
        
    }, 3000);
</script>

  <%- include('footer') %>